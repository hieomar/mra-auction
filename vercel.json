{
    "version": 2,
    "functions": {
        "api/*.php": { "runtime": "vercel-php@0.6.0" }
    },
    "routes": [
        { "src": "/", "dest": "api/index.php" },
        { "src": "/public/(.*)", "dest": "/public/$1" }
    ],
    "builds": [
        { "src": "api/*.php", "use": "@vercel-php" }
    ]
}
